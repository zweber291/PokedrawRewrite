{
  "name": "PokedrawRewrite",
  "version": "1.0.0",
  "main": "main.js",
  "devDependencies": {
    "electron": "^10.1.3",
    "electron-builder": "^25.1.8",
    "electron-packager": "^15.1.0"
  },
  "scripts": {
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.zweber.PokedrawRewrite",
    "productName": "PokedrawRewrite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "favicon.ico"
    }
  }
}
